{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "declarationDir": "./dist",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}